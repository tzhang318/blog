    "url": "https://github.com/tzhang318/blog/issues"
  },
  "homepage": "https://github.com/tzhang318/blog#readme",
  "devDependencies": {
    "eslint": "^8.37.0",
    "eslint-plugin-react": "^7.32.2",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "mongoose": "^7.0.3"
  },
  "jest": {
    "testEnvironment": "node"
